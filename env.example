# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment Mode (production, development, or test)
NODE_ENV=development

# Application Name
APP_NAME=LexiFlow

# Server Host (default: 0.0.0.0)
HOST=0.0.0.0

# Server Port (default: 666)
PORT=666

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection URI (required)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DATABASE_URI=mongodb://localhost:27017/lexiflow

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT Access Token Private Key (Base64 encoded RS256 private key) - Required
# Generate with: openssl genrsa -out private.pem 2048 && base64 -i private.pem
JWT_ACCESS_TOKEN_SECRET_PRIVATE=your_base64_encoded_private_key

# JWT Access Token Public Key (Base64 encoded RS256 public key) - Required
# Generate with: openssl rsa -in private.pem -pubout -out public.pem && base64 -i public.pem
JWT_ACCESS_TOKEN_SECRET_PUBLIC=your_base64_encoded_public_key

# JWT Access Token Expiration (in minutes, default: 240)
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=240

# Refresh Token Expiration (in days, default: 1)
REFRESH_TOKEN_EXPIRATION_DAYS=1

# Email Verification Token Expiration (in minutes, default: 60)
VERIFY_EMAIL_TOKEN_EXPIRATION_MINUTES=60

# Password Reset Token Expiration (in minutes, default: 30)
RESET_PASSWORD_TOKEN_EXPIRATION_MINUTES=30

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Server Host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP Server Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP Authentication Username
SMTP_USERNAME=your_email@gmail.com

# SMTP Authentication Password or API Key
SMTP_PASSWORD=your_smtp_password

# Email "From" Address
EMAIL_FROM=noreply@lexiflow.com

# SMTP Secure Connection (true for SSL, false for TLS)
SMTP_SECURE=false

# ============================================
# FRONTEND URL
# ============================================

# Frontend Application URL (for email links, CORS, etc.)
FRONTEND_URL=http://localhost:3000

# ============================================
# IMAGE/FILE STORAGE
# ============================================

# Public Image URL Base Path
IMAGE_URL=http://localhost:666/images

# Cloudinary Configuration (for cloud image storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# AI SERVICES
# ============================================

# OpenAI API Key (fallback AI provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# Google AI (Gemini) API Key (primary AI provider) - Required
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ============================================
# PAYMENT GATEWAY (RAZORPAY)
# ============================================

# Razorpay Key ID (for payment processing)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id

# Razorpay Key Secret
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# GOOGLE OAUTH
# ============================================

# Google OAuth Client ID
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google OAuth Callback URL
GOOGLE_CALLBACK_URL=http://localhost:666/api/v1/auth/google/callback

# ============================================
# AADHAAR E-SIGN (INDIA)
# ============================================

# Aadhaar E-Sign API Key (for digital signatures)
AADHAAR_API_KEY=your_aadhaar_api_key

# Aadhaar E-Sign API Secret
AADHAAR_API_SECRET=your_aadhaar_api_secret

# Aadhaar E-Sign API URL
AADHAAR_API_URL=https://esign.aadhaar.gov.in

# ============================================
# STREAM.IO (VIDEO/CHAT)
# ============================================

# Stream.io API Key (for video consultations and chat)
# Get from: https://getstream.io/dashboard/
STREAM_API_KEY=your_stream_api_key

# Stream.io API Secret
STREAM_API_SECRET=your_stream_api_secret

# Stream.io App ID
STREAM_APP_ID=your_stream_app_id

# ============================================
# PUPPETEER CONFIGURATION
# ============================================

# Skip Chromium Download (false for production, true for development)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# Puppeteer Cache Directory
PUPPETEER_CACHE_DIR=/opt/render/.cache/puppeteer

# ============================================
# DEFAULT USER SEEDING (DEVELOPMENT/TEST ONLY)
# ============================================
# WARNING: These are ONLY used in development/test environments
# Default users are NEVER created in production for security reasons
# Set SEED_DEFAULT_USERS=false to disable user seeding even in development

# Enable/Disable default user seeding (default: true in dev/test, false in production)
SEED_DEFAULT_USERS=true

# Default User Account (regular user)
DEFAULT_USER_USERNAME=johndoe
DEFAULT_USER_EMAIL=john.doe@example.com
DEFAULT_USER_PASSWORD=your_secure_password_here

# Default Admin Account
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@lexiflow.com
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password_here

# Default SuperAdmin Account
DEFAULT_SUPERADMIN_USERNAME=superadmin
DEFAULT_SUPERADMIN_EMAIL=superadmin@lexiflow.com
DEFAULT_SUPERADMIN_PASSWORD=your_secure_superadmin_password_here

# Note: If passwords are not set, random passwords will be generated
# Random passwords are logged in development mode only

